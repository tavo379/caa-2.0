---
import Layout from "../../../layouts/Layout.astro";
import { sanityClient } from "sanity:client";
import groq from "groq";
import { PortableText } from "astro-portabletext";

export async function getStaticPaths() {
  const rows = await sanityClient.fetch(groq`
    *[_type=="project" && language=="es"]{ "slug": slug.current }
  `);
  return rows.map((x: any) => ({ params: { slug: x.slug } }));
}

const { slug } = Astro.params;
const lang = "es";

const project = await sanityClient.fetch(
  groq`
*[_type=="project" && language=="es" && slug.current==$slug][0]{
  title,
  excerpt,
  body,
  cover{asset->{url}, alt},
  tech,
  links,
  publishedAt
}
`,
  { slug },
);

if (!project) {
  return Astro.redirect("/404");
}

const title = `${project.title} — Cacao & Avocado`;
const description = project.excerpt || `Proyecto: ${project.title}`;
---

<Layout title={title} description={description} lang={lang}>
  <article class="project-detail">
    <div class="container">
      <!-- Hero -->
      <header class="project-header">
        <h1>{project.title}</h1>
        {project.excerpt && <p class="excerpt">{project.excerpt}</p>}
        {
          project.tech && project.tech.length > 0 && (
            <div class="tech-tags">
              {project.tech.map((tech: string) => (
                <span class="tag">{tech}</span>
              ))}
            </div>
          )
        }
      </header>

      <!-- Cover Image -->
      {
        project.cover?.asset?.url && (
          <div class="cover-image">
            <img
              src={project.cover.asset.url}
              alt={project.cover.alt ?? project.title}
              loading="lazy"
              decoding="async"
            />
          </div>
        )
      }

      <!-- Body Content -->
      <div class="project-content">
        {project.body && <PortableText value={project.body} />}
      </div>

      <!-- Links -->
      {
        project.links && (project.links.siteUrl || project.links.repoUrl) && (
          <div class="project-links">
            {project.links.siteUrl && (
              <a
                href={project.links.siteUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="btn-link"
              >
                Ver Sitio Web
              </a>
            )}
            {project.links.repoUrl && (
              <a
                href={project.links.repoUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="btn-link"
              >
                Ver Repositorio
              </a>
            )}
          </div>
        )
      }

      <!-- Back Link -->
      <div class="back-link">
        <a href={`/${lang}/proyectos`}>← Volver a Proyectos</a>
      </div>
    </div>
  </article>
</Layout>

<style>
  .project-detail {
    padding: 3rem 1rem 5rem;
    background-color: #f8fafc;
    min-height: 80vh;
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
  }

  .project-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .project-header h1 {
    font-size: 3rem;
    color: #0f172a;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .excerpt {
    font-size: 1.25rem;
    color: #64748b;
    margin-bottom: 1.5rem;
    line-height: 1.7;
  }

  .tech-tags {
    display: flex;
    gap: 0.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .tag {
    background-color: #3b82f6;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .cover-image {
    margin-bottom: 3rem;
    border-radius: 0.5rem;
    overflow: hidden;
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
  }

  .cover-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .project-content {
    background: white;
    padding: 3rem;
    border-radius: 0.5rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    margin-bottom: 3rem;
    line-height: 1.8;
    font-size: 1.125rem;
    color: #334155;
  }

  .project-content :global(h2) {
    font-size: 2rem;
    color: #0f172a;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .project-content :global(h3) {
    font-size: 1.5rem;
    color: #1e293b;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .project-content :global(p) {
    margin-bottom: 1.25rem;
  }

  .project-content :global(ul),
  .project-content :global(ol) {
    margin-bottom: 1.25rem;
    padding-left: 2rem;
  }

  .project-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .project-content :global(a) {
    color: #3b82f6;
    text-decoration: underline;
  }

  .project-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 0.5rem;
    margin: 2rem 0;
  }

  .project-links {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 3rem;
  }

  .btn-link {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background-color: #3b82f6;
    color: white;
    text-decoration: none;
    border-radius: 0.375rem;
    font-weight: 600;
    transition: background-color 0.2s;
  }

  .btn-link:hover {
    background-color: #2563eb;
  }

  .back-link {
    text-align: center;
  }

  .back-link a {
    color: #64748b;
    text-decoration: none;
    font-weight: 500;
  }

  .back-link a:hover {
    color: #3b82f6;
  }

  @media (max-width: 768px) {
    .project-header h1 {
      font-size: 2rem;
    }

    .project-content {
      padding: 2rem 1.5rem;
    }

    .project-links {
      flex-direction: column;
    }
  }
</style>

---
interface Props {
    title: string;
    subtitle: string;
    primaryButtonText: string;
    primaryButtonLink: string;
    secondaryButtonText?: string;
    secondaryButtonLink?: string;
    variant?: "default" | "dark" | "light";
}

const {
    title,
    subtitle,
    primaryButtonText,
    primaryButtonLink,
    secondaryButtonText,
    secondaryButtonLink,
    variant = "default",
} = Astro.props;
---

<section class={`cta-block cta-${variant}`}>
    <div class="container">
        <h2>{title}</h2>
        <p class="subtitle">{subtitle}</p>
        <div class="button-group">
            <a href={primaryButtonLink} class="btn btn-primary"
                >{primaryButtonText}</a
            >
            {
                secondaryButtonText && secondaryButtonLink && (
                    <a href={secondaryButtonLink} class="btn btn-secondary">
                        {secondaryButtonText}
                    </a>
                )
            }
        </div>
    </div>
</section>

<style>
    .cta-block {
        padding: 5rem 1rem;
        text-align: center;
    }

    .cta-default {
        background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
        color: white;
    }

    .cta-dark {
        background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
        color: white;
    }

    .cta-light {
        background-color: #f8fafc;
        color: #0f172a;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
    }

    h2 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        line-height: 1.2;
    }

    .subtitle {
        font-size: 1.25rem;
        margin-bottom: 2.5rem;
        opacity: 0.95;
        line-height: 1.6;
    }

    .cta-light .subtitle {
        color: #64748b;
    }

    .button-group {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn {
        display: inline-block;
        padding: 1rem 2.5rem;
        border-radius: 0.375rem;
        text-decoration: none;
        font-weight: 700;
        font-size: 1.125rem;
        transition: all 0.2s;
    }

    .cta-default .btn-primary,
    .cta-dark .btn-primary {
        background-color: white;
        color: #3b82f6;
    }

    .cta-light .btn-primary {
        background-color: #3b82f6;
        color: white;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    }

    .cta-default .btn-secondary,
    .cta-dark .btn-secondary {
        background-color: transparent;
        border: 2px solid white;
        color: white;
    }

    .cta-light .btn-secondary {
        background-color: transparent;
        border: 2px solid #3b82f6;
        color: #3b82f6;
    }

    .btn-secondary:hover {
        background-color: rgba(255, 255, 255, 0.1);
    }

    .cta-light .btn-secondary:hover {
        background-color: rgba(59, 130, 246, 0.1);
    }

    @media (max-width: 768px) {
        h2 {
            font-size: 2rem;
        }

        .subtitle {
            font-size: 1.125rem;
        }

        .button-group {
            flex-direction: column;
            align-items: stretch;
        }

        .btn {
            width: 100%;
        }
    }
</style>

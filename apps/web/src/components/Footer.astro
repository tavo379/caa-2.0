---
import { ui } from "../i18n/ui";

const { lang = "es" } = Astro.props;
const t = ui[lang as keyof typeof ui];
---

<footer class="site-footer">
    <div class="container">
        <div class="footer-content">
            <div class="brand">
                <span class="logo">Cacao & Avocado</span>
                <p>Shopify & HubSpot Experts</p>
            </div>

            <div class="links">
                <a href={`/${lang}`}>{t["nav.home"]}</a>
                <a href={`/${lang}#${lang === "en" ? "services" : "servicios"}`}
                    >{t["nav.services"]}</a
                >
                <a href={`/${lang}/${lang === "en" ? "projects" : "proyectos"}`}
                    >{t["nav.projects"]}</a
                >
                <a href={`/${lang}/about`}>{t["nav.about"]}</a>
                <a href={`/${lang}/contact`}>{t["nav.contact"]}</a>
            </div>

            <div class="social">
                <a href="#" target="_blank" rel="noopener noreferrer"
                    >LinkedIn</a
                >
                <a href="#" target="_blank" rel="noopener noreferrer"
                    >Instagram</a
                >
            </div>
        </div>

        <div class="copyright">
            &copy; {new Date().getFullYear()} Cacao & Avocado. {
                t["footer.rights"]
            }
        </div>
    </div>
</footer>

<style>
    .site-footer {
        background-color: #0f172a;
        color: white;
        padding: 4rem 1rem 2rem;
        margin-top: auto;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .footer-content {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 2rem;
        margin-bottom: 3rem;
    }

    .brand .logo {
        font-weight: 800;
        font-size: 1.5rem;
        display: block;
        margin-bottom: 0.5rem;
    }

    .brand p {
        color: #94a3b8;
        font-size: 0.875rem;
    }

    .links {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .links a {
        color: #cbd5e1;
        text-decoration: none;
        transition: color 0.2s;
    }

    .links a:hover {
        color: white;
    }

    .social {
        display: flex;
        gap: 1rem;
    }

    .social a {
        color: #cbd5e1;
        text-decoration: none;
    }

    .social a:hover {
        color: white;
    }

    .copyright {
        text-align: center;
        padding-top: 2rem;
        border-top: 1px solid #1e293b;
        color: #64748b;
        font-size: 0.875rem;
    }

    @media (max-width: 768px) {
        .footer-content {
            flex-direction: column;
            text-align: center;
        }

        .social {
            justify-content: center;
        }
    }
</style>

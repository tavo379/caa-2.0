---
interface Props {
    title: string;
    subtitle: string;
    ctaPrimary: string;
    ctaSecondary: string;
    lang: string;
}

const { title, subtitle, ctaPrimary, ctaSecondary, lang } = Astro.props;
---

<section class="hero">
    <div class="container">
        <h1>{title}</h1>
        <p class="subtitle">{subtitle}</p>
        <div class="cta-group">
            <a href={`/${lang}/contact`} class="btn btn-primary">{ctaPrimary}</a
            >
            <a href={`/${lang}/proyectos`} class="btn btn-secondary"
                >{ctaSecondary}</a
            >
        </div>
    </div>
</section>

<style>
    .hero {
        background-color: #0f172a;
        color: white;
        padding: 6rem 1rem;
        text-align: center;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
    }

    h1 {
        font-size: 3rem;
        margin-bottom: 1.5rem;
        line-height: 1.2;
    }

    .subtitle {
        font-size: 1.25rem;
        color: #cbd5e1;
        margin-bottom: 2.5rem;
    }

    .cta-group {
        display: flex;
        gap: 1rem;
        justify-content: center;
    }

    .btn {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        border-radius: 0.375rem;
        text-decoration: none;
        font-weight: 600;
        transition: background-color 0.2s;
    }

    .btn-primary {
        background-color: #3b82f6;
        color: white;
    }

    .btn-primary:hover {
        background-color: #2563eb;
    }

    .btn-secondary {
        background-color: transparent;
        border: 1px solid #cbd5e1;
        color: white;
    }

    .btn-secondary:hover {
        background-color: rgba(255, 255, 255, 0.1);
    }

    @media (max-width: 640px) {
        h1 {
            font-size: 2rem;
        }

        .cta-group {
            flex-direction: column;
        }
    }
</style>

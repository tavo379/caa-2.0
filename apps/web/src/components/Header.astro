---
import { ui } from "../i18n/ui";

const { lang = "es" } = Astro.props;

const t = ui[lang as keyof typeof ui];

const navItems = [
    { label: t["nav.home"], href: `/${lang}` },
    {
        label: t["nav.services"],
        href: `/${lang}#${lang === "en" ? "services" : "servicios"}`,
    },
    {
        label: t["nav.projects"],
        href: `/${lang}/${lang === "en" ? "projects" : "proyectos"}`,
    },
    { label: t["nav.about"], href: `/${lang}/about` },
    { label: t["nav.contact"], href: `/${lang}/contact` },
];
---

<header class="site-header">
    <div class="container">
        <a href={`/${lang}`} class="logo"> Cacao & Avocado </a>

        <nav class="main-nav">
            <ul>
                {
                    navItems.map((item) => (
                        <li>
                            <a href={item.href}>{item.label}</a>
                        </li>
                    ))
                }
            </ul>
        </nav>

        <div class="lang-toggle">
            <a href="/es" class={lang === "es" ? "active" : ""}>ES</a>
            <span class="divider">/</span>
            <a href="/en" class={lang === "en" ? "active" : ""}>EN</a>
        </div>

        <button class="mobile-menu-toggle" aria-label="Menu">
            <span></span>
            <span></span>
            <span></span>
        </button>
    </div>
</header>

<style>
    .site-header {
        background-color: white;
        border-bottom: 1px solid #e2e8f0;
        padding: 1rem 0;
        position: sticky;
        top: 0;
        z-index: 50;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .logo {
        font-weight: 800;
        font-size: 1.5rem;
        color: #0f172a;
        text-decoration: none;
    }

    .main-nav ul {
        display: flex;
        gap: 2rem;
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .main-nav a {
        color: #475569;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.2s;
    }

    .main-nav a:hover {
        color: #3b82f6;
    }

    .lang-toggle {
        display: flex;
        gap: 0.5rem;
        font-weight: 600;
        font-size: 0.875rem;
        color: #94a3b8;
    }

    .lang-toggle .active {
        color: #0f172a;
    }

    .lang-toggle a {
        color: #94a3b8;
        text-decoration: none;
    }

    .lang-toggle a:hover {
        color: #475569;
    }

    .mobile-menu-toggle {
        display: none;
        background: none;
        border: none;
        cursor: pointer;
        flex-direction: column;
        gap: 4px;
    }

    .mobile-menu-toggle span {
        display: block;
        width: 24px;
        height: 2px;
        background-color: #0f172a;
    }

    @media (max-width: 768px) {
        .main-nav {
            display: none; /* Hidden on mobile for now, would need JS for toggle */
        }

        .mobile-menu-toggle {
            display: flex;
        }
    }
</style>

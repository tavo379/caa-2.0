---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
    title: string;
    description?: string;
    lang?: string;
}

const { title, description = "Cacao & Avocado", lang = "es" } = Astro.props;
---

<!doctype html>
<html lang={lang}>
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="stylesheet" href="/src/styles/theme.css" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body
        class="bg-slate-50 text-slate-900 font-sans antialiased flex flex-col min-h-screen"
    >
        <Header lang={lang} />
        <slot />
        <Footer lang={lang} />
    </body>
</html>

<style is:global>
    :root {
        --color-primary: #0f172a;
        --color-accent: #3b82f6;
    }

    body {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
</style>
